# -*- mode: yaml -*-

manifest:
  version: 1.0

automations:
  request_screenshot_1:
    if:
      - true
      - {{ pr.title | includes(term='request') }}
    run:
      - action: add-label@v1
        args:
          label: 'no-screenshot'
          color: '#FF000A'
      - action: request-changes@v1
        args:
          comment: |
            Be a life saver ðŸ›Ÿ by adding a screenshot of the changes you made.
      - action: add-comment@v1
        args:
          comment: |
            comment 1
  docs_safe_changes:
    if:
      - {{ files | allDocs }}
    run: 
      - action: add-labels@v1
        args:
          labels: ['documentation']
