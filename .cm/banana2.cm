# -*- mode: yaml -*-

manifest:
  version: 1.0


automations:
  send_slack_1:
    if:
      - true
    run:
      - action: send-slack-message@v1
        args:
          message: "Hello world :tada:."
          webhook_url: "{{ slack_webhook }}"

  small_change:
    if:
      - {{ files | allDocs }}
    run:
      - action: merge@v1
        args:
          rebase_on_merge: true


slack_webhook: {{ env.SLACK_DEV_WEBHOOK }}